<mujoco model="single_leg_hopper">
    <compiler angle="degree" coordinate="local"/>

    <!-- default body and geom properties -->
    <default>
        <geom contype="1" conaffinity="1" density="1000" friction="1 0.5 0.5"/>
        <joint limited="true"/>
    </default>

    <!-- worldbody -->
    <worldbody>
        <!-- ground plane -->
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" material="gridmat"/>

        <!-- torso body -->
        <body name="torso" pos="0 0 1.0">
            <geom name="torso_geom" type="sphere" size="0.1" rgba="0.3 0.3 1 1"/>
            
            <!-- prismatic leg -->
            <body name="leg" pos="0 0 -0.2">
                <joint name="leg_slider" type="slide" axis="0 0 1" limited="true" range="0 0.5"/>
                <geom name="leg_geom" type="capsule" fromto="0 0 0 0 0 -0.2" size="0.05" rgba="1 0 0 1"/>
                
                <!-- foot -->
                <geom name="foot" type="sphere" size="0.05" pos="0 0 -0.2" rgba="0 1 0 1"/>
            </body>
        </body>
    </worldbody>

    <!-- actuators -->
    <actuator>
        <motor joint="leg_slider" ctrlrange="-20 20" gear="100"/>
    </actuator>

    <!-- sensors (optional) -->
    <sensor>
        <!-- <force body="leg" name="leg_force"/> -->
        <jointpos joint="leg_slider" name="leg_pos"/>
        <jointvel joint="leg_slider" name="leg_vel"/>
    </sensor>
</mujoco>
